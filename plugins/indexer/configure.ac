# --enable-indexer-plugin=yes/no
AC_ARG_ENABLE([indexer-plugin],
              [AS_HELP_STRING([--enable-indexer-plugin=@<:@yes/no@:>@],
                              [Indexes project.])],
              [enable_indexer_plugin=$enableval],
              [enable_indexer_plugin=yes])

# for if ENABLE_INDEXER_PLUGIN in Makefile.am
AM_CONDITIONAL(ENABLE_INDEXER_PLUGIN, test x$enable_indexer_plugin = xyes)

# Ensure our makefile is generated by autoconf
AC_CONFIG_FILES([plugins/indexer/Makefile])
